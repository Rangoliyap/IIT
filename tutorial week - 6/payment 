# Function for input
def get_input():
    old_balance = float(input("Enter old balance: "))
    charges = float(input("Enter charges for month: "))
    credits = float(input("Enter credits: "))
    return old_balance, charges, credits

# Function to calculate new balance and minimum payment
def calculate_balance_and_payment(old_balance, charges, credits):
    # Add 1.5% finance charge
    finance_charge = old_balance * 0.015
    new_balance = old_balance + finance_charge + charges - credits

    # Determine minimum payment
    if new_balance <= 20:
        minimum_payment = new_balance
    else:
        minimum_payment = 20 + 0.10 * (new_balance - 20)

    return new_balance, minimum_payment

# Function for output
def show_output(new_balance, minimum_payment):
    print(f"New balance: ${new_balance:.2f}")
    print(f"Minimum payment: ${minimum_payment:.2f}")

# Main function
def main():
    old_balance, charges, credits = get_input()
    new_balance, minimum_payment = calculate_balance_and_payment(old_balance, charges, credits)
    show_output(new_balance, minimum_payment)

# Run the program
main()