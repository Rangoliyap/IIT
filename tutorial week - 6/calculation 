# mortgage_calculation.py

def get_inputs():
    """Get user inputs for mortgage calculation"""
    annual_rate = float(input("Enter annual rate of interest: "))
    monthly_payment = float(input("Enter monthly payment: "))
    beginning_balance = float(input("Enter beg. of month balance: "))
    return annual_rate, monthly_payment, beginning_balance


def calculate_monthly_values(annual_rate, monthly_payment, beginning_balance):
    """Calculate interest paid, reduction of principal, and end-of-month balance"""
    monthly_rate = annual_rate / 12 / 100
    interest_paid = beginning_balance * monthly_rate
    reduction_principal = monthly_payment - interest_paid
    end_balance = beginning_balance - reduction_principal
    return interest_paid, reduction_principal, end_balance


def display_results(interest_paid, reduction_principal, end_balance):
    """Display the results"""
    print(f"Interest paid for the month: {interest_paid:,.2f}")
    print(f"Reduction of principal: {reduction_principal:,.2f}")
    print(f"End of month balance: {end_balance:,.2f}")


def main():
    annual_rate, monthly_payment, beginning_balance = get_inputs()
    interest_paid, reduction_principal, end_balance = calculate_monthly_values(
        annual_rate, monthly_payment, beginning_balance
    )
    display_results(interest_paid, reduction_principal, end_balance)


if __name__ == "__main__":
    main()